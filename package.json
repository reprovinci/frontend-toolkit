{
  "name": "rv-frontend-toolkit",
  "version": "0.1.0",
  "description": "Frontend toolkit. Framework classes, grid, typography/colors/spacing setup.. the scaffolding we start with. ðŸš€",
  "main": "index.js",
  "scripts": {
    "deploy": "npm-run-all prod:sass-toolkit prod:sass-packages prod:eleventy gh-pages",
    "dev:eleventy": "ELEVENTY_ENV=development eleventy --serve --quiet",
    "dev:rollup": "rollup --config --watch --sourcemap",
    "dev:sass-toolkit": "sass src/scss/frontend-toolkit.scss dist/css/frontend-toolkit.css --watch",
    "dev:sass-packages": "sass src/scss/packages.scss dist/css/packages.css --watch",
    "gh-pages": "gh-pages -d _site",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint src/js/*",
    "lint:stylelint": "stylelint \"src/**/*.{css,scss}\" --fix --cache --cache-location .cache/.stylelintcache --rd",
    "ngrok": "npm-run-all --parallel dev:* ngrok:serve",
    "ngrok:serve": "ngrok http http://localhost:8080/",
    "prod:eleventy": "ELEVENTY_ENV=production eleventy",
    "prod:rollup": "rollup --config --compact",
    "prod:sass-toolkit": "sass src/scss/frontend-toolkit.scss dist/css/frontend-toolkit.css --no-source-map",
    "prod:sass-packages": "sass src/scss/packages.scss dist/css/packages.css --no-source-map",
    "start": "npm-run-all --parallel dev:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reprovinci/frontend-toolkit.git"
  },
  "keywords": [
    "frontend",
    "framework",
    "scss",
    "grid",
    "typography"
  ],
  "style": "dist/css/frontend-toolkit.css",
  "sass": "src/scss/frontend-toolkit.scss",
  "files": [
    "dist/css/*.{css,map}",
    "src/scss/**/*.scss"
  ],
  "contributors": [
    "G. Lekkerkerker",
    "M.C. Brouwer"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reprovinci/frontend-toolkit/issues"
  },
  "homepage": "https://github.com/reprovinci/frontend-toolkit",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.0",
    "@babel/core": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "gh-pages": "^3.1.0",
    "ngrok": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.51.1",
    "sass": "^1.32.12",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0"
  },
  "dependencies": {
    "swiper": "^6.7.0"
  }
}
